@model GameApp.Web.Models.ViewModels.Game.GameDetailViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<<div class="container">
    <div class="col-md-12">
        <div class="card badge-dark">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h1 class="text-center">@Model.GameTitle</h1>
                        <div class="row">
                            <div class="text-center">
                               <h1 class="small">@Model.GameDescription</h1>
                            </div>

                        </div>
                        <h1 class="text-left small">Game release Date:</h1>
                        <p>@(Model.GameReleaseDate.Value.ToString("yyyy MMMM dd"))</p>
                        <h1 class="text-left small">Game popular tags </h1>
                        <p>@string.Join(", ",@Model.Genres.Select(c => c.Tag))</p>
                    </div>
                    <div class="col-md-8">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="https://steamcdn-a.akamaihd.net/steam/apps/760060/ss_422c06d4911bb0a4c1f9dd010f4af26a06bbbf83.600x338.jpg?t=1558612909 Slide" alt="First slide">
                                    <div class="carousel-caption d-none d-md-block">
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://steamcdn-a.akamaihd.net/steam/apps/760060/ss_d2e76794f7064f55dda5ca66aa79e7b26271ff4c.600x338.jpg?t=1558612909 Slide" alt="Second slide">
                                </div>
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://steamcdn-a.akamaihd.net/steam/apps/760060/ss_fd0d399c7c6d1823963a56b73e4964f9b52d4dc6.600x338.jpg?t=1558612909 Slide" alt="Third slide">
                                    <div class="carousel-caption d-none d-md-block">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
